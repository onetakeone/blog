Add a comment:
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<% @article.comments.each do |c|%>
	<table><tr><td><b><%= c.commenter %></b></td></tr>
	<tr><td></td></tr>
	<tr><td><%= c.body %></td></tr>
	<tr><td>----------------------</td></tr>
	</table>
<%end%>

