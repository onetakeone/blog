<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>    

    <header>
      <ul class='menu'>
      <%= link_to 'home', home_index_path %> | <%= link_to 'articles', articles_path %> | <a href="/contacts">contact</a> | <a href="/about">about</a> | <a href="/terms">terms</a> | <% if user_signed_in? %> <b><%= link_to "#{current_user.username}", edit_user_registration_path %></b> | <%= link_to 'logout', destroy_user_session_path, method: :delete %> <% else %> <%= link_to 'login', new_user_session_path %> <% end %>
      </ul>
    </header>

    <%= yield %>

    <div align=center><br />
    <p class="notice"><i><%= notice %></i></p>
    <p class="alert"><%= alert %></p>
    </div>
    
  </body>
</html>
